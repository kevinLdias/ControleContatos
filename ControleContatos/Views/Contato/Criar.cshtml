@model ContatoModel

@{
    ViewData["Title"] = "Cadastrar contato";
}
<h6 class="display-4 text-primary text-center fw-bold">Cadastrar Contato</h6>
<form method="post" asp-controller="Contato" asp-action="Criar">
    <div class="form-group">
        <label class="fw-bold">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br />
    <div class="form-group">
        <label class="fw-bold">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o email do contato">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <div class="form-group">
        <label class="fw-bold">Número</label>
        <input type="text" class="form-control" asp-for="Numero" placeholder="Digite o número do contato">
        @Html.ValidationMessageFor(x => x.Numero)
    </div>
    <br />
    <a role="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>