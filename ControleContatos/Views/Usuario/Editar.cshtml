@using ControleContatos.Enums
@model UsuarioModel

@{
    ViewData["Title"] = "Editar usuario";
}
<h6 class="display-4 text-primary text-center fw-bold">Editar Usuário</h6>
<form method="post" asp-action="Editar">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label class="fw-bold">Nome</label>
        <input type="text" class="form-control" asp-for="Nome" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <br />
    <div class="form-group">
        <label class="fw-bold">Email</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Digite o email do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <br />
    <div class="form-group">
        <label class="fw-bold">Login</label>
        <input type="text" class="form-control" asp-for="Login" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <br />
    <div class="form-group">
        <label class="fw-bold">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecionar</option>
            <option value="@PerfilEnum.Admin">Admin</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>
    <br />
    <a role="button" class="btn btn-secondary" asp-action="Index">Voltar</a>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>
