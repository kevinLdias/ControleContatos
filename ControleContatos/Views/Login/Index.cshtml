@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-action="Entrar" method="post">

    <div class="mb-3">
        <label asp-for="Login" class="form-label"></label>
        <input asp-for="Login" class="form-control" />
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="mb-3">
        <label asp-for="Senha" class="form-label"></label>
        <input asp-for="Senha" class="form-control" type="password" />
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <p class="mb-4 text-sm-start mx-auto">
        Esqueceu sua senha?
        <a asp-action="RedefinirSenha" class="text-primary fw-bold bg-gradient">Redefinir senha</a>
    </p>

    <button type="submit" class="btn btn-primary w-100">Entrar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
